{
  "compilerOptions": {
    "esModuleInterop": true ,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
